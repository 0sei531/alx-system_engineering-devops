#!/usr/bin/env bash
# Configures an Nginx server to redirect /redirect_me to another page

# Update package repositories and install Nginx
apt-get -y update
apt-get -y install nginx

# Allow HTTP traffic through the firewall
ufw allow 'Nginx HTTP'

# Create a simple index file for testing purposes
echo 'Hello World!' > /var/www/html/index.nginx-debian.html

# Define the redirection URL
REDIRECT_URL="https://www.youtube.com/watch?v=QH2-TGUlwu4"

# Add a rewrite rule for /redirect_me to the Nginx configuration
sed -i "/listen 80 default_server;/a rewrite ^/redirect_me $REDIRECT_URL permanent;" /etc/nginx/sites-available/default

# Restart Nginx to apply the configuration changes
service nginx restart

