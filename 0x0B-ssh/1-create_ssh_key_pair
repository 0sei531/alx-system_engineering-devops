#!/bin/bash

# Check if the key pair already exists
if [[ -f ~/.ssh/school && -f ~/.ssh/school.pub ]]; then
    echo "Key pair 'school' already exists."
    exit 1
fi

# Generate the RSA key pair with passphrase
ssh-keygen -t rsa -b 4096 -f ~/.ssh/school -N "betty"

echo "Key pair 'school' created successfully."

